pipeline {
    agent any
    environment {
        DOCKER_IMAGE = 'ruddha/login:latest'
    }
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/akulkarni63/Raj.git'
            }
        }

        stage('Test Docker') {
            steps {
                sh 'docker --version'
                sh 'docker images'  // List Docker images
                sh 'docker ps -a'   // List Docker containers
            }
        }

        stage('Build Docker') {
            steps {
                sh 'docker build -t $DOCKER_IMAGE .'
            }
        }

        stage('Run App') {
            steps {
                sh 'docker run -d -p 8081:80 $DOCKER_IMAGE'
                sh 'docker ps'  // Verify the running container
            }
        }

        stage('Docker Login & Push') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker-hub') {
                        sh 'docker push $DOCKER_IMAGE'
                    }
                }
            }
        }
    }
}
